# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Firebase Admin SDK
# Download your service account key from Firebase Console:
# Project Settings > Service Accounts > Generate New Private Key
# Place the downloaded JSON file in this directory and update the path below
FIREBASE_ADMIN_SDK_PATH=./lxroseinc-firebase-adminsdk-5g2cj-df13bfcd94.json

# JWT Secret
# Generate a strong random secret: openssl rand -base64 32
# IMPORTANT: Change this to a secure random string!
JWT_SECRET=your_secure_jwt_secret_here_change_this_to_something_random

# Server Configuration
PORT=5001

# Firebase Database URL
FIREBASE_DATABASE_URL=https://lxroseinc-default-rtdb.firebaseio.com
